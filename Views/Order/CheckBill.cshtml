@using MarinaCargo.Models.ViewModels
@model BillViewModel
@{
    ViewBag.Title = "Billing Information";
}

<div class="panel"><h1>Billing Information</h1></div>
<form method="post" asp-action="CheckBill">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <div>
            <label>Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <br />
        <div>
            <label>Credit Card:</label>
            <input asp-for="Card" class="form-control" />
        </div>
        <br />
        <button class="btn btn-success" type="submit"> Checkout </button>
        <button class="btn btn-primary" asp-action="Index" asp-controller="Cart"> Cancel </button>
    </div>
</form>
