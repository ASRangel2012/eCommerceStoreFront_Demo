@model Order
@{
    ViewBag.Title = "Add Shipping Information";
}
<div class="panel"><h1>Checkout</h1></div>
@if (!User.Identity.IsAuthenticated)
{ <h3><strong>NOTE:</strong> You are checking out as a guest.  <a asp-controller="User" asp-action="SignIn">Click here to sign in to an account.</a></h3> }
<h3>Please enter your shipping information.</h3>
<div>
    <form asp-action="CheckShip" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <div>
                <label>Name:</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <br />
            <div>
                <label>Address 1:</label>
                <input asp-for="Add1" class="form-control" />
            </div>
            <br />
            <div>
                <label>Address 2:</label>
                <input asp-for="Add2" class="form-control" />
            </div>
            <br />
            <div>
                <label>City:</label>
                <input asp-for="City" class="form-control" />
            </div>
            <br />
            <div>
                <label>State:</label>
                <input asp-for="State" class="form-control" />
            </div>
            <br />          
            <div>
                <label>Zip Code:</label>
                <input asp-for="Zip" class="form-control" />
            </div>
            <br />
            <div>
                <button class="btn btn-success" type="submit"> Checkout </button>
                <button class="btn btn-primary" asp-action="Index" asp-controller="Cart"> Cancel </button>
            </div>
        </div>
    </form>
</div>
